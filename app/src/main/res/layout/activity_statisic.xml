<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:isScrollContainer="true"
    android:keepScreenOn="false"
    android:orientation="vertical"
    android:overScrollMode="always"
    app:layout_scrollFlags="scroll"
    tools:context=".UI.StatisicActivity">

    <fragment
        android:id="@+id/fragment_container"
        android:name="com.exampdm.moneybook.UI.BalanceFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_balance" />

    <fragment
        android:id="@+id/fragment_item_range"
        android:name="com.exampdm.moneybook.UI.ItemRangeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_item_range" />


</LinearLayout>